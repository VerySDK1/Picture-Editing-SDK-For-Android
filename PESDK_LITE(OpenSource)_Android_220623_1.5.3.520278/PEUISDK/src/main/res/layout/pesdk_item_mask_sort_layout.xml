<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMaskItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.pesdk.uisdk.widget.SquareFrameLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical">

        <com.pesdk.uisdk.widget.ExtListItemStyle
            android:id="@+id/item_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@null"
            app:extBorderLineWidth="2dp"
            app:extBorderRoundRadius="3dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/pesdk_style_bg" />
    </com.pesdk.uisdk.widget.SquareFrameLayout>

</LinearLayout>
