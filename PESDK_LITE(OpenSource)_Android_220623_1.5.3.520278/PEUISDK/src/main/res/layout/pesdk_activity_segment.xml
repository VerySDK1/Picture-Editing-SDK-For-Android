<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_main_bg"
    android:fitsSystemWindows="true">


    <!--播放器-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tmp2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <com.vecore.VirtualImageView
            android:id="@+id/beauty_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/pesdk_main_bg" />

        <com.vecore.base.lib.ui.PreviewFrameLayout
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <com.pesdk.uisdk.widget.segment.SegmentView
                android:id="@+id/doodleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.vecore.base.lib.ui.PreviewFrameLayout>


    </RelativeLayout>


    <include
        layout="@layout/pesdk__frag_revoke_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="@+id/paintLayout"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:id="@+id/paintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/pesdk_transparent20_white"
        app:layout_constraintBottom_toTopOf="@+id/tmp2">

        <include layout="@layout/pesdk_paint_stroke_layout" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tmp2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_fragment_height"
        android:background="@color/pesdk_child_fragment_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--菜单-->
        <com.pesdk.uisdk.widget.ReboundHScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/tmp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/btn_auto"
                    style="@style/pesdk_beauty_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:drawableTop="@drawable/pesdk_ic_koutu"
                    android:gravity="center"
                    android:onClick="onSegment"
                    android:text="@string/pesdk_koutu" />

                <CheckedTextView
                    android:id="@+id/btn_segment_fast"
                    style="@style/pesdk_beauty_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:drawableTop="@drawable/pesdk_segment_custom"
                    android:gravity="center_horizontal"
                    android:onClick="onSegment"
                    android:text="@string/pesdk_segment_faster" />


                <CheckedTextView
                    android:id="@+id/btn_rubber"
                    style="@style/pesdk_beauty_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:drawableTop="@drawable/pesdk_segment_rubber"
                    android:gravity="center_horizontal"
                    android:onClick="onSegment"
                    android:text="@string/pesdk_segment_rubber" />

                <TextView
                    android:id="@+id/btn_reset"
                    style="@style/pesdk_beauty_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:drawableTop="@drawable/pesdk_crop_reset"
                    android:enabled="false"
                    android:gravity="center"
                    android:onClick="onSegment"
                    android:text="@string/pesdk_segment_reset" />
            </LinearLayout>
        </com.pesdk.uisdk.widget.ReboundHScrollView>


        <RelativeLayout
            android:id="@+id/tmp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pesdk_btn_bottom_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pesdk_segment"
                android:textColor="@color/pesdk_main_text_color_n"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pesdk_btn_bottom_sure" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.pesdk.uisdk.widget.segment.FloatSegmentView
        android:id="@+id/floatSegmentView"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>