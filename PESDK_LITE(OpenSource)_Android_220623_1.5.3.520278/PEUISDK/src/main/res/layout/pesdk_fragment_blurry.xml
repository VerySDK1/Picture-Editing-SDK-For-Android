<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_child_fragment_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/menuLayout"
        app:layout_constraintVertical_weight="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <!--高斯模糊-->
            <LinearLayout
                android:id="@+id/ll_gaussian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/pesdk_blurry"
                    android:textColor="@color/pesdk_child_main_text_color_n"
                    android:textSize="12dp" />

                <SeekBar
                    android:id="@+id/sb_gaussian"
                    style="@style/pesdk_sbar_base_style"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:max="100"
                    android:maxHeight="@dimen/dp_3"
                    android:minHeight="@dimen/dp_3"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:progress="0"
                    android:thumbOffset="15dp" />

            </LinearLayout>

            <!--边缘模糊-->
            <LinearLayout
                android:id="@+id/ll_edges"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pesdk_blurry"
                        android:textColor="@color/pesdk_child_main_text_color_n"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sb_edges_strength"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:progress="0"
                        android:thumbOffset="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pesdk_blur_half_inner"
                        android:textColor="@color/pesdk_child_main_text_color_n"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sb_edges_innerRadius"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:progress="50"
                        android:thumbOffset="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pesdk_blur_center"
                        android:textColor="@color/pesdk_child_main_text_color_n"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sb_edges_center_x"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:progress="50"
                        android:thumbOffset="15dp" />

                    <SeekBar
                        android:id="@+id/sb_edges_center_y"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:progress="50"
                        android:thumbOffset="15dp" />

                </LinearLayout>

            </LinearLayout>

            <!--径向模糊-->
            <LinearLayout
                android:id="@+id/ll_radial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pesdk_blurry"
                        android:textColor="@color/pesdk_child_main_text_color_n"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sb_radial_strength"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:progress="0"
                        android:thumbOffset="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/pesdk_blurry"
                        android:textColor="@color/pesdk_child_main_text_color_n"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/sb_redial_center_x"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:progress="50"
                        android:thumbOffset="15dp" />

                    <SeekBar
                        android:id="@+id/sb_redial_center_y"
                        style="@style/pesdk_sbar_base_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:max="100"
                        android:maxHeight="@dimen/dp_3"
                        android:minHeight="@dimen/dp_3"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:progress="50"
                        android:thumbOffset="15dp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <RadioGroup
            android:id="@+id/rgMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_edges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/pesdk_ic_blurry_edges"
                android:gravity="center"
                android:text="@string/pesdk_blurry_edges"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_12" />

            <RadioButton
                android:id="@+id/btn_gaussian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/pesdk_ic_blurry_gaussian"
                android:gravity="center"
                android:text="@string/pesdk_blurry_gaussian"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_12" />

            <RadioButton
                android:id="@+id/btn_radial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/pesdk_ic_blurry_radial"
                android:gravity="center"
                android:text="@string/pesdk_blurry_radial"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_12" />

        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/pesdk_fragment_titlebar_layout" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>