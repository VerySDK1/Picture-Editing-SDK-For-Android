<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_5">

        <ImageView
            android:id="@+id/pop_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pesdk_layer_add" />
    </RelativeLayout>


    <TextView
        android:id="@+id/btn_layer_merge"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/pesdk_pip_merge_bg"
        android:drawableLeft="@drawable/pesdk_pip_merge"
        android:drawablePadding="-5dp"
        android:gravity="center"
        android:text="@string/pesdk_layer_merge"
        android:textColor="@color/pesdk_main_text_color_n"
        android:textSize="@dimen/text_size_12" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPipList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</LinearLayout>