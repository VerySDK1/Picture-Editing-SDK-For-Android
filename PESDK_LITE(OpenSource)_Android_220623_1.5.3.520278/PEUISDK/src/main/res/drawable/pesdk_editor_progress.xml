<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 滑竿背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/radius_sbar" />
            <solid android:color="@color/pesdk_message_text_hint" />
        </shape>
    </item>
    <!-- 进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/radius_sbar" />
                <solid android:color="@color/pesdk_main_color" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/radius_sbar" />
                <solid android:color="@color/pesdk_transparent_white" />
                <stroke
                    android:width="1dp"
                    android:height="1dp"
                    android:color="@color/pesdk_transparent" />
            </shape>
        </clip>
    </item>

</layer-list>