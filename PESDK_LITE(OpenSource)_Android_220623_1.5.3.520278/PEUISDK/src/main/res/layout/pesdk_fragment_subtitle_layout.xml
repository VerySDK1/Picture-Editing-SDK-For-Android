<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_child_fragment_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--动态调整Y-->
        <LinearLayout
            android:id="@+id/thelocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_edit_parent_height"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/pesdk_sub_edittext_background">

                <ImageView
                    android:id="@+id/ivClear"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/pesdk_subtitle_clear" />

                <EditText
                    android:id="@+id/subtitle_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/ivClear"
                    android:background="@drawable/pesdk_sub_edittext_background"
                    android:hint="@string/pesdk_sub_hint"
                    android:imeOptions="actionDone"
                    android:maxLength="400"
                    android:padding="2dp"
                    android:paddingLeft="4dp"
                    android:singleLine="false"
                    android:textColor="@color/pesdk_black"
                    android:textColorHint="@color/pesdk_child_main_text_color_n"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/subtitle_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:src="@drawable/pesdk_btn_bottom_sure" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llSubtitleMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_edit_parent_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/pesdk_btn_bottom_cancel"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivSure"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/pesdk_btn_bottom_sure"
                android:visibility="gone" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/subtitle_menu_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/subtitle_input"
                        style="@style/pesdk_sub_menu_x_rbtn_style"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/pesdk_sub_menu_input" />

                    <RadioButton
                        android:id="@+id/subtitle_style"
                        style="@style/pesdk_sub_menu_x_rbtn_style"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/pesdk_sub_menu_style" />

                    <RadioButton
                        android:id="@+id/subtitle_flower"
                        style="@style/pesdk_sub_menu_x_rbtn_style"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/pesdk_sub_menu_flower_word" />

                    <RadioButton
                        android:id="@+id/subtitle_bubble"
                        style="@style/pesdk_sub_menu_x_rbtn_style"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/pesdk_sub_menu_bubble" />

                    <RadioButton
                        android:id="@+id/subtitle_ttf"
                        style="@style/pesdk_sub_menu_x_rbtn_style"
                        android:paddingStart="15dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="5dp"
                        android:text="@string/pesdk_sub_menu_font" />

                </RadioGroup>

            </HorizontalScrollView>


        </RelativeLayout>

    </LinearLayout>


    <!--容器-->
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>