<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/osd_menu_layout"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/pesdk_fragment_titlebar_bg"
              android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/rgMosaic"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textColor="@drawable/pesdk_rb_proportion_color"
            android:singleLine="true"
            android:text="@string/pesdk_osd_rb_blur"
            />

        <RadioButton
            android:id="@+id/rb_pixl"
            android:layout_width="wrap_content"
            android:text="@string/pesdk_osd_rb_pixl"
            android:textColor="@drawable/pesdk_rb_proportion_color"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:singleLine="true"
            />

        <RadioButton
            android:id="@+id/rb_osd"
            android:layout_width="wrap_content"
            android:text="@string/pesdk_osd_rb_osd"
            android:background="@null"
            android:button="@null"
            android:layout_height="wrap_content"
            android:textColor="@drawable/pesdk_rb_proportion_color"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:singleLine="true"
            />

    </RadioGroup>


    <RelativeLayout
        android:id="@+id/osdBarLayout"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:clipChildren="false"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:id="@+id/osd_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/pesdk_mosaic_blur_n"
            />

        <com.pesdk.uisdk.widget.ExtSeekBar2
            android:id="@+id/sbarStrength"
            android:layout_toRightOf="@+id/osd_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:maxHeight="1.5dp"
            android:maxWidth="1.5dp"
            android:minHeight="1.5dp"
            android:minWidth="1.5dp"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:progress="50"
            android:progressDrawable="@drawable/pesdk_factor_progress"
            android:thumb="@drawable/pesdk_music_factor_thumb"
            android:thumbOffset="15dp"
            android:clipChildren="false"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/reTitle"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <com.vecore.base.lib.ui.ExtButton
            android:id="@+id/ivCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_bottom_cancel"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"/>



        <TextView
            android:id="@+id/tvTitles"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/pesdk_transparent_white"
            android:textSize="16.5dp" />




        <com.vecore.base.lib.ui.ExtButton
            android:id="@+id/ivSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pesdk_sure"
            android:gravity="center"
            android:minWidth="@dimen/dp_40"/>
    </RelativeLayout>
</LinearLayout>
