<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="pecommon_Theme.ve.base" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="pecommon_Theme.ve.main" parent="pecommon_Theme.ve.base">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch" tools:ignore="NewApi">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="pecommon_Theme.ve.fullscreen" parent="pecommon_Theme.ve.base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>