<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_child_fragment_bg"
    android:orientation="vertical">


    <!--数据列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pesdk_rect_adjust_menu_size"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pesdk_adjust_rect"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_14" />

            <com.pesdk.uisdk.widget.ReboundHScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbarStyle="@null"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/ivOffLeft"
                        style="@style/pesdk_item_rect_adjust"
                        android:src="@drawable/pesdk_offset_left" />

                    <ImageView
                        android:id="@+id/ivOffTop"
                        style="@style/pesdk_item_rect_adjust"
                        android:src="@drawable/pesdk_offset_up" />

                    <ImageView
                        android:id="@+id/ivOffDown"
                        style="@style/pesdk_item_rect_adjust"
                        android:src="@drawable/pesdk_offset_down" />

                    <ImageView
                        android:id="@+id/ivOffRight"
                        style="@style/pesdk_item_rect_adjust"
                        android:src="@drawable/pesdk_offset_right" />

                    <ImageView
                        android:id="@+id/ivOffCenter"
                        style="@style/pesdk_item_rect_adjust"
                        android:src="@drawable/pesdk_offset_center" />

                </LinearLayout>
            </com.pesdk.uisdk.widget.ReboundHScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pesdk_rect_adjust_menu_size"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pesdk_adjust_size"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOffNnlarge"
                    style="@style/pesdk_item_rect_adjust"
                    android:src="@drawable/pesdk_offset_enlarge" />

                <ImageView
                    android:id="@+id/ivOffNarrow"
                    style="@style/pesdk_item_rect_adjust"
                    android:src="@drawable/pesdk_offset_narrow" />

                <ImageView
                    android:id="@+id/ivOffFull"
                    style="@style/pesdk_item_rect_adjust"
                    android:src="@drawable/pesdk_offset_full" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pesdk_rect_adjust_menu_size"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pesdk_adjust_mirror"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBgHorizontal"
                    style="@style/pesdk_item_rect_adjust"
                    android:src="@drawable/pesdk_edit_horizontal_n" />

                <ImageView
                    android:id="@+id/ivBgVer"
                    style="@style/pesdk_item_rect_adjust"
                    android:src="@drawable/pesdk_edit_vertical_n" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/pesdk_rect_adjust_menu_size"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pesdk_adjust_rotate"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_14" />

            <com.pesdk.uisdk.widget.ExtFilterSeekBar
                android:id="@+id/sbar_rotate"
                style="@style/pesdk_filter_config_sbar"
                android:layout_marginLeft="@dimen/dimen_10"
                android:progress="0" />

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/pesdk_fragment_titlebar_layout" />


</LinearLayout>