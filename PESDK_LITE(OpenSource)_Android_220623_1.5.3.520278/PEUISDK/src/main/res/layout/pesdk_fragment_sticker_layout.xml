<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/special_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/pesdk_child_fragment_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--分类-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sticker_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <com.pesdk.uisdk.widget.ParallaxRecyclerView
                    android:id="@+id/sticker_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/common_loading_public" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/llSubtitleMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_bottom_titlebar_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pesdk_btn_bottom_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pesdk_sticker"
            android:textColor="@color/pesdk_main_text_color_n"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/ivSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/pesdk_btn_bottom_sure" />

    </RelativeLayout>

</LinearLayout>