<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <!--封面-->
        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/common_desc"
            android:background="@color/album_item_bg"/>

        <TextView
            android:id="@+id/tvMediaNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/album_shape_text_gray"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/album_shape_gradient_anchor"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivItemType"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/common_desc"
                android:src="@drawable/album_ic_video" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="2dp"
                android:paddingStart="0dp"
                android:text="23：00"
                android:textColor="@color/white"
                android:textSize="8dp" />

        </RelativeLayout>

        <View
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/transparent_black50"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/album_ic_delete"
        android:contentDescription="@string/common_desc" />

</RelativeLayout>