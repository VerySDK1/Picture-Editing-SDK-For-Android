<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_main_bg"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tmp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pesdk_btn_bottom_cancel" />


            <RadioGroup
                android:id="@+id/rgHairGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbShortHair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:button="@null"
                    android:checked="true"
                    android:text="@string/pesdk_card_rb_short_hair"
                    android:textColor="@drawable/pesdk_sub_menu_x_textcolor"
                    android:textSize="@dimen/text_size_14" />

                <RadioButton
                    android:id="@+id/rbLongHair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:button="@null"
                    android:text="@string/pesdk_card_rb_long_hair"
                    android:textColor="@drawable/pesdk_sub_menu_x_textcolor"
                    android:textSize="@dimen/text_size_14" />


            </RadioGroup>


            <TextView
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/pesdk_bg_save_template"
                android:gravity="center"
                android:minWidth="@dimen/dp_60"
                android:text="@string/pesdk_save"
                android:textColor="@color/pesdk_main_color"
                android:textSize="@dimen/text_size_14" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <fragment
                android:id="@+id/menuFragment"
                android:name="com.pesdk.uisdk.ui.card.fragment.MenuFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_fragment_height"
                app:layout_constraintBottom_toBottomOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_50"
                app:layout_constraintBottom_toTopOf="@+id/menuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1">


                <!--播放器-->
                <com.vecore.base.lib.ui.PreviewFrameLayout
                    android:id="@+id/rl_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <com.vecore.VirtualImageView
                        android:id="@+id/beauty_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/pesdk_main_bg" />


                    <com.pesdk.uisdk.widget.edit.EditDragView
                        android:id="@+id/dragHair"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                    <!--涂鸦-->
                    <com.pesdk.uisdk.widget.segment.SegmentView
                        android:id="@+id/doodleView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <!--手动抠图过程中，UI显示衣服-->
                    <FrameLayout
                        android:id="@+id/clothesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <com.pesdk.uisdk.ui.card.widget.TestDrawView
                        android:id="@+id/testView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                </com.vecore.base.lib.ui.PreviewFrameLayout>
            </RelativeLayout>


            <ViewStub
                android:id="@+id/mVsClothesMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/pesdk_clothes_menu_layout"
                app:layout_constraintBottom_toTopOf="@id/menuFragment" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.pesdk.uisdk.widget.segment.FloatSegmentView
        android:id="@+id/floatSegmentView"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>