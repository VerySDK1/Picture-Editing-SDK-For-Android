<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_child_fragment_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/pesdk_layer_alpha"
                android:textColor="@drawable/pesdk_edit_menu_color"
                android:textSize="@dimen/text_size_16" />

            <com.pesdk.uisdk.widget.ExtFilterSeekBar
                android:id="@+id/sbar_range"
                style="@style/pesdk_filter_config_sbar"
                android:layout_marginLeft="@dimen/dimen_10"
                android:progress="100" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAdd"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_layer_ic_add" />

            <ImageView
                android:id="@+id/ivDelete"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_ic_delete" />

            <ImageView
                android:id="@+id/ivUp"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_layer_ic_up" />

            <ImageView
                android:id="@+id/ivDown"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_layer_ic_down" />

            <ImageView
                android:id="@+id/ivSw"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_layer_item_sw"
                android:visibility="gone" />


            <CheckBox
                android:id="@+id/ivHide"
                style="@style/pesdk_main_menu_edit_item"
                android:button="@drawable/pesdk_layer_ic_hide" />

            <CheckBox
                android:id="@+id/ivLock"
                style="@style/pesdk_main_menu_edit_item"
                android:src="@drawable/pesdk_layer_ic_lock"
                android:visibility="gone" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <include layout="@layout/pesdk_fragment_titlebar_layout" />
</LinearLayout>

