<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.vecore.VirtualImageView
            android:id="@+id/vvMediaPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/pesdk_main_bg" />

        <com.vecore.base.lib.ui.PreviewFrameLayout
            android:id="@+id/rlVideoCropFramePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <com.pesdk.uisdk.crop.CropView
                android:id="@+id/cvVideoCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </com.vecore.base.lib.ui.PreviewFrameLayout>

    </RelativeLayout>


    <fragment
        android:id="@+id/proportionFragment"
        android:name="com.pesdk.uisdk.fragment.ProportionFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150" />
</LinearLayout>