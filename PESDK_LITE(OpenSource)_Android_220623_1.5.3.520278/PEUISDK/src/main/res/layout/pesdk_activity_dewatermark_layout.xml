<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pesdk_main_bg"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <fragment
            android:id="@+id/demarkFragment"
            android:name="com.pesdk.uisdk.ui.home.erase.ErasePenFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/demarkFragment">

            <com.vecore.VirtualImageView
                android:id="@+id/virtualImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/pesdk_main_bg" />

            <com.vecore.base.lib.ui.PreviewFrameLayout
                android:id="@+id/contentViewLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">

                <com.pesdk.uisdk.ui.home.erase.EarseGroup
                    android:id="@+id/touchGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.pesdk.widget.ZoomView
                        android:id="@+id/zoomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />


                    <!--涂鸦-->
                    <com.pesdk.uisdk.widget.doodle.DoodleView
                        android:id="@+id/doodleView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </com.pesdk.uisdk.ui.home.erase.EarseGroup>
            </com.vecore.base.lib.ui.PreviewFrameLayout>


            <include
                layout="@layout/pesdk__frag_revoke_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


    </RelativeLayout>

    <com.pesdk.uisdk.widget.segment.FloatSegmentView
        android:id="@+id/floatSegmentView"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>