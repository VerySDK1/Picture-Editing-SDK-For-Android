<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtitle_position_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_align_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_lt" />

        <ImageView
            android:id="@+id/iv_align_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_t" />

        <ImageView
            android:id="@+id/iv_align_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_rt" />


        <ImageView
            android:id="@+id/iv_align_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_lb"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_align_middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_b"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_align_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:src="@drawable/pesdk_sub_position_rb"
            android:visibility="gone" />


    </LinearLayout>



</RelativeLayout>