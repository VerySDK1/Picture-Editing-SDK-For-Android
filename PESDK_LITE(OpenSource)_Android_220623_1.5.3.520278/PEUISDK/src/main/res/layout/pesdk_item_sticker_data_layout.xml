<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:layout_width="@dimen/dp_60"
    android:layout_height="@dimen/dp_60"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5">

    <com.pesdk.uisdk.widget.ExtRoundRectSimpleDraweeView
        android:id="@+id/item_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/pesdk_fu_menu_text_color"
        android:src="@null"
        app:extBorderLineWidth="2dp"
        app:extBorderRoundRadius="3dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:minWidth="25dp"
        android:minHeight="25dp">

        <com.pesdk.uisdk.widget.CircleProgressBarView
            android:id="@+id/ttf_pbar"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivDown"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            android:src="@drawable/pesdk_ic_down" />
    </FrameLayout>
</androidx.cardview.widget.CardView>
